<div class="locker-wrapper">

    <header>
        <img src="/images/logo-banner2.jpg">
        <h1>Locker Room</h1>
    </header>

    <section class="columns">

        <div class="column">
            <h2>Your Team</h2>
            <div class="container-full">

            </div>
            <div class="input-field col s12">
                <select id="filter">
                    <option value="" disabled selected>Filter Player's by Position</option>
                    <option value="qb">Quarter Backs</option>
                    <option value="rb">Running Backs</option>
                    <option value="wr">Wide Recievers</option>
                    <option value="te">Tight Ends</option>
                    <option value="ds">Defense</option>
                    <option value="k">Kickers</option>
                    <option value="1">All Your Drafted Players</option>
                </select>

            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Rank</th>
                        <th scope="col">Position Rank</th>
                        <th scope="col">Player Name</th>
                        <th scope="col">Team Name</th>
                        <th scope="col">Draft Avg</th>
                        <th scope="col">Bye Week</th>   
                    </tr>
                </thead>
                <tbody id="a-players">

                </tbody>
            </table>

        </div>

    </section>

    <footer class="News-footer">
        <h3>Latest News</h3>
        <br>
        <a class="waves-effect waves-light green btn" id="news-btn">Update News!</a>
        <br>
        <br>
        <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Headlines</th>
                        
                    </tr>
                </thead>
                <tbody id="newsTable">

                </tbody>
    </footer>

</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/locker.js"></script>

